name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v2

      - name: Log in to Docker Hub
        run: echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin

      - name: Build and push Docker images
        run: |
          services=("api-gateway" "account-management" "wallet" "trading")
          for service in "${services[@]}"; do
            docker build -f ./$service/Dockerfile -t your-dockerhub-username/$service:latest ./$service
            docker push your-dockerhub-username/$service:latest
          done

      - name: Set up Kubernetes CLI
        uses: azure/setup-kubectl@v1
        with:
          version: "1.22.0"

      - name: Deploy to Kubernetes
        env:
          KUBECONFIG: ${{ secrets.KUBECONFIG }}
        run: |
          echo "$KUBECONFIG" > kubeconfig.yaml
          kubectl --kubeconfig=kubeconfig.yaml apply -f kubernetes/trading-deployment.yaml
          kubectl --kubeconfig=kubeconfig.yaml apply -f kubernetes/wallet-deployment.yaml
          kubectl --kubeconfig=kubeconfig.yaml apply -f kubernetes/account-management-deployment.yaml
          kubectl --kubeconfig=kubeconfig.yaml apply -f kubernetes/api-gateway-deployment.yaml

      - name: Clean up
        run: |
          rm -f kubeconfig.yaml
